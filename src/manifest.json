{
  "name": "Hmmm!",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Programing for all.",
  "browser_action": {
    "default_title": "WebScript",
    "default_icon": "icons/16-full-color.png"
  },
  "background": {
    "page": "pages/background.html"
  },
  "web_accessible_resources": [
    "scripts/content/injected.js",
    "scripts/common/params.js",
    "scripts/common/logging.js",
    "scripts/content/misc.js"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery-1.7.2.js",
             "lib/underscore.js",
             "lib/outline/jquery.dom-outline-1.0.js",
             "scripts/common/common.js",
             "scripts/common/params.js",
             "scripts/common/logging.js",
             "scripts/content/misc.js",
             "scripts/content/snapshot.js",
             "scripts/content/port.js", 
             "scripts/content/synthesis.js",
             "scripts/content/target.js",
             "scripts/content/annotation_events.js",
             "scripts/content/content_script.js"],
      "run_at": "document_start",
      // Bug with Chrome extensions doesn't allow extension code to access
      // frames within a page. Instead we need to load the content script
      // into each page.
      // http://code.google.com/p/chromium/issues/detail?id=20773 
      "all_frames": true
    }
  ],
  "omnibox": {
    "keyword" : "webscript"
  },
  "icons": {
    "16": "icons/16-full-color.png",
    "48": "icons/48-full-color.png",
    "128": "icons/128-full-color.png"
  },
  "permissions": [
    "tabs", // used to communicate
    "webNavigation", // used to listen to load events
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ]
}
